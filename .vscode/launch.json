  "version": "0.2.0",
  "configurations": [
    {
      "name": "clang++ build and debug active file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/examples/helloworld/helloworld",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [{
        "name": "LD_LIBRARY_PATH",
        "value": "../../PhysX_3.4/Bin/linux64:../../PxShared/bin/linux64"
      }],
      "externalConsole": false,
      "MIMode": "lldb",
      "setupCommands": [
        {
          "description": "gdb の再フォーマットを有効にする",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "clang++ build active file",
      "miDebuggerPath": "/usr/bin/lldb-mi"
    }
  ]
}